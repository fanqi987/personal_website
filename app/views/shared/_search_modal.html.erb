<!-- 搜索模态  -->
<div class="modal fade" id="<%= object[:search_modal_id] %>" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <%= form_for :search, url: yield(:post_path), method: :get do |f| %>
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <p class="glyphicon glyphicon-search"> <%= object[:modal_title] %></p>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :start_time do %>
              <span class='glyphicon glyphicon-time'></span> 开始时间:
            <% end %>
            <%= f.date_field :start_time, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :end_time do %>
              <span class="glyphicon glyphicon-time"></span> 结束时间:
            <% end %>
            <%= f.date_field :end_time, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :word do %>
              <span class="	glyphicon glyphicon-pencil"></span> 请输入关键字:
            <% end %>
            <%= f.text_field :word, class: "form-control" %>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.button "提交", type: :submit, class: "btn btn-success btn-block" %>
        </div>
      </div>
    <% end %>
  </div>
</div>