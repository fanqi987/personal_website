<!DOCTYPE html>
<html>
<body>
<!-- banner-->
<%= provide :banner, 'maple_login.png' %>
<div class="container">
  <div class="reset_password_title" id="reset_password_title">
    <p>重设密码 <span class="fas fa-key"></span></p>
  </div>
  <%= render 'shared/flash' %>
  <div class="reset_password_content">
    <%= render 'shared/errors', object: @user %>
    <%= form_for(@user, url: password_reset_path(params[:id]), method: :patch) do |f| %>
      <%= hidden_field_tag :email, @user.email %>
      <%= f.label :password, "密码" %>
      <%= f.password_field :password, required: true %>
      <%= f.label :password_confirmation, "再次密码" %>
      <%= f.password_field :password_confirmation, required: true %>
      <%= f.button "提交", type: :submit, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
</body>
<script>
    onDocumentContentReady(-1);
</script>
</html>