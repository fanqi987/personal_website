<!DOCTYPE html>
<html>
<body>
<div class="container">
  <div class="register_title" id="register_title">
    <p>用户注册 <span class="fas fa-registered"></span></p>
  </div>
  <%= render 'shared/flash' %>
  <%#= p @user.errors.collect.to_a %>
  <div class="register_content">
    <%= form_for(@user, url: register_path, method: :post) do |f| %>
      <%= render 'shared/errors', object: @user %>
      <div class="form-group">
        <%= f.label :email, '注册邮箱' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      <div class='form-group'>
        <%= f.label :name, '用户名' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password, '密码' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, '密码确认' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
      <div class="row">
        <%= f.submit "提交注册", class: "btn btn-primary" %>
        <%= link_to('已有账号？点击登录', login_path + "#login_title", type: 'button', class: 'btn btn-primary btn-link') %>
        <!--        <a type='button' class="btn btn-primary" href="/login">已有账号？点击登录</a>-->
      </div>
    <% end %>
  </div>
</div>
</body>
<script>
    onDocumentContentReadyNotMenu(-1);
</script>
</html>